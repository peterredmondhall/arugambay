<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:com.google.gwt.user.datepicker.client">

	<ui:with field='messages' type='com.gwt.wizard.client.resources.ClientMessages' />
	<ui:style>
		.title { font-weight:bold; color: #62ba37; margin-bottom:
		10px; font-size:
		30px;}
		.desc { font-weight:bold; margin-bottom: 10px;
		font-size: 15px;}
		.image { margin-right: 10px;}

		.selectContainerStyle
		{
			width: 100%;
			margin-left:10px; 
		}

		.brd {
			borderx: 1px solid silver;
			padding: 2px;
			margin-bottom:6px;
			width:100%;
			height:100%;
		}
		.ratingspanel {
			borderx: 1px solid silver;
			padding: 2px;
			margin-bottom:6px;
			height:100px;
		}
		.tarea {
			width: 100%;
			max-width: 320px; /* Will be AT MOST 320px wide */
		}
		.imageRoute {
			max-width: 100px;
		}
		.callaction {
			margin-top:20px;
			margin-left:10px;
			margin-right:10px;
		}

	</ui:style>
	<g:HTMLPanel ui:field="mainPanel">

		<g:VerticalPanel styleName="{style.brd}">
			<g:HorizontalPanel ui:field="dp">
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:Image ui:field="imageSearch" url="images/search-512.png" width="24px"  height="24px"/>
			    <g:FlowPanel ui:field="routeSuggestionPanel"
					styleName="{style.selectContainerStyle}">
				</g:FlowPanel>
			</g:HorizontalPanel>
				<g:VerticalPanel ui:field="panelMotivation">
				<g:Label  styleName="{style.callaction}">
					Hi. Welcome to taxisurfr. 
				</g:Label>
				<g:Label  styleName="{style.callaction}">
					If you want to book a reliable and safe taxi you are in right place. Just enter details and book the taxi.
				</g:Label>
				<g:Label  styleName="{style.callaction}">
					Apart from being a taxi booking service, we also offer taxi sharing.
				</g:Label>
				<g:Label  styleName="{style.callaction}">
					Book now. The earlier you book, the better your chances of somebody sharing with you.
				</g:Label>
				</g:VerticalPanel>			
						<g:VerticalPanel ui:field="panelRoute">
				<g:Label styleName="{style.title}" ui:field="labelRouteName" />
				<g:HorizontalPanel>
					    <g:Image ui:field="imageVehicle" styleName="{style.imageRoute}" />
					<g:VerticalPanel>
						<g:Label styleName="{style.desc}">Description</g:Label>
						<g:Label ui:field="labelDescription" />

					</g:VerticalPanel>
				</g:HorizontalPanel>
			</g:VerticalPanel>
			<g:HorizontalPanel ui:field="ratingsPanel"
				styleName="{style.brd}">

			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 