<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:com.google.gwt.user.datepicker.client" 
	xmlns:my="urn:import:com.gwt.wizard.client.steps.ui">

	<ui:with field='messages' type='com.gwt.wizard.client.resources.ClientMessages' />

	<ui:style>

	</ui:style>

	<g:HTMLPanel ui:field="mainPanel">
		<g:Label>Hier ist eine Zusammenfassung Ihrer Bestellung:</g:Label>
		<g:Grid>
			<!-- Datum -->
			<g:row styleName="optionalHeaderStyle">
				<g:customCell styleName="labelDiv">
					<g:Label>Date of arrival</g:Label>
				</g:customCell>
				<g:customCell>
					<g:Label ui:field="labelDate" />
				</g:customCell>
			</g:row>
			<!-- Hinfahrt von -->
			<g:row styleName="optionalHeaderStyle">
				<g:customCell styleName="labelDiv">
					<g:Label>Time of landing</g:Label>
				</g:customCell>
				<g:customCell>
					<g:Label ui:field="labelLandingTime" />
				</g:customCell>
			</g:row>
			<!-- Abholung am von -->
			<g:row styleName="optionalHeaderStyle">
				<g:customCell styleName="labelDiv">
					<g:Label>Flight no.</g:Label>
				</g:customCell>
				<g:customCell>
					<g:Label ui:field="labelFlightNo" />
				</g:customCell>
			</g:row>
			<!-- RÃ¼ckfahr von -->
			<g:row  styleName="optionalHeaderStyle">
				<g:customCell styleName="labelDiv">
					<g:Label ui:field="labelRPP">No. of passengers</g:Label>
				</g:customCell>
				<g:customCell>
					<g:Label ui:field="labelPax" />
				</g:customCell>
			</g:row>
			<!-- Abholung am von -->
			<g:row  styleName="optionalHeaderStyle">
				<g:customCell styleName="labelDiv">
					<g:Label ui:field="labelRPT">No. of surfboards</g:Label>
				</g:customCell>
				<g:customCell>
					<g:Label ui:field="labelSurfboards" />
				</g:customCell>
			</g:row>
			<!-- Total no. passengers -->
			<g:row styleName="optionalHeaderStyle">
				<g:customCell styleName="labelDiv">
					<g:Label>Name</g:Label>
				</g:customCell>
				<g:customCell>
					<g:Label ui:field="labelName" />
				</g:customCell>
			</g:row>
			<g:row styleName="optionalHeaderStyle">
				<g:customCell styleName="labelDiv">
					<g:Label>Email</g:Label>
				</g:customCell>
				<g:customCell>
					<g:Label ui:field="labelEmail" />
				</g:customCell>
			</g:row>
			<g:row styleName="optionalHeaderStyle">
				<g:customCell styleName="labelDiv">
					<g:Label>Paypal</g:Label>
				</g:customCell>
				<g:customCell>
					<my:Paypal ui:field="paypal"/>
				</g:customCell>
			</g:row>
									

		</g:Grid>

	</g:HTMLPanel>
	
</ui:UiBinder> 