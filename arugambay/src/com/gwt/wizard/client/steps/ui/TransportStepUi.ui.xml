<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:com.google.gwt.user.datepicker.client">

	<ui:with field='messages' type='com.gwt.wizard.client.resources.ClientMessages' />
	<ui:style>
		.title { font-weight:bold; color: #62ba37; margin-bottom:
		10px; font-size:
		30px;}
		.desc { font-weight:bold; margin-bottom: 10px;
		font-size: 15px;}
		.image { margin-right: 10px;}
		.addressContainerStyle{
		width: 250px; }
		.addressFieldStyle{ width: 250px; }
	</ui:style>

	<g:HTMLPanel ui:field="mainPanel">
		<g:DecoratorPanel>
			<g:VerticalPanel>
				<g:HorizontalPanel ui:field="routeSuggestionPanel"
					styleName="{style.addressFieldStyle}">
<!-- 					<g:Label styleName="destinationlabel">Enter your start or destination</g:Label> -->
<!-- 					<g:SuggestBox ui:field="suggestBox"/>  -->
				</g:HorizontalPanel>
				<g:VerticalPanel ui:field="panelRoute" >
					<g:Label styleName="{style.title}" ui:field="labelRouteName" />
					<g:HorizontalPanel>
						<g:Image ui:field="imageVehicle" styleName="{style.image}" />
						<g:VerticalPanel>
							<g:Label>USD</g:Label>
							<g:Label ui:field="labelPrice" />
						</g:VerticalPanel>

					</g:HorizontalPanel>
					<g:Label styleName="{style.desc}">Description</g:Label>
					<g:Label ui:field="labelDescription"/>
					
