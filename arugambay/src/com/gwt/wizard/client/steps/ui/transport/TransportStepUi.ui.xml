<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:com.google.gwt.user.datepicker.client">

	<ui:with field='messages' type='com.gwt.wizard.client.resources.ClientMessages' />
	<ui:style>
		.title { font-weight:bold; color: #62ba37; margin-bottom:
		10px; font-size:
		30px;}
		.desc { font-weight:bold; margin-bottom: 10px;
		font-size: 15px;}
		.image { margin-right: 10px;}

		.selectContainerStyle
		{
			width: 100%;
			margin-left:10px; 
		}

		.brd {
			borderx: 1px solid silver;
			padding: 2px;
			margin-bottom:6px;
			width:767px;
		}
		.ratingspanel {
			borderx: 1px solid silver;
			padding: 2px;
			margin-bottom:6px;
			height:100px;
		}
		.tarea {
			width: 100%;
			max-width: 320px; /* Will be AT MOST 320px wide */
		}
		.imageSearch {
			src: 'images/search-512.png'; 
		}
		.imagePlace {
			max-width: 300px; 
			margin-right:6px;
		}
		.description {
			margin-left:6px;
		}

	</ui:style>
	<g:HTMLPanel ui:field="mainPanel">

		<g:VerticalPanel styleName="{style.brd}">
			<g:HorizontalPanel ui:field="dp">
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:Image ui:field="imageSearch" url="images/search-512.png" width="32px"  height="32px"/>
			    <g:FlowPanel ui:field="routeSuggestionPanel"
					styleName="{style.selectContainerStyle}">
				</g:FlowPanel>
			</g:HorizontalPanel>
			<g:VerticalPanel ui:field="panelRoute">
				<g:Label styleName="{style.title}" ui:field="labelRouteName" />
				<g:HorizontalPanel>
					    <g:Image ui:field="imageVehicle" styleName="{style.imagePlace}" />
					<g:VerticalPanel styleName="{style.description}">
						<g:Label>USD</g:Label>
						<g:Label ui:field="labelPrice" />
						<g:Label styleName="{style.desc}">Description</g:Label>
						<g:Label ui:field="labelDescription" />

					</g:VerticalPanel>
				</g:HorizontalPanel>
			</g:VerticalPanel>
			<g:HorizontalPanel ui:field="ratingsPanel"
				styleName="{style.brd}">

			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 