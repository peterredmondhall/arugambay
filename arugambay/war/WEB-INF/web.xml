<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">

	<servlet>
		<servlet-name>BookingServiceServlet</servlet-name>
		<servlet-class>com.gwt.wizard.server.BookingServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>BookingServiceServlet</servlet-name>
		<url-pattern>/gwt_wizard/service</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>BookingServiceServlet</servlet-name>
		<url-pattern>/gwt_dashboard/service</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UploadServlet</servlet-name>
		<url-pattern>*.gupld</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DumpServlet</servlet-name>
		<url-pattern>/dumpservice</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>ImageServlet</servlet-name>
		<url-pattern>/imageservice</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>DumpServlet</servlet-name>
		<servlet-class>com.gwt.wizard.servlet.DumpServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>ImageServlet</servlet-name>
		<servlet-class>com.gwt.wizard.servlet.ImageServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.gwt.wizard.servlet.LoginServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/gwt_wizard/login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>UploadServlet</servlet-name>
		<servlet-class>com.gwt.wizard.servlet.UploadServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>PDFRendererServlet</servlet-name>
		<servlet-class>com.gwt.wizard.servlet.PDFRendererServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>PDFRendererServlet</servlet-name>
		<url-pattern>/orderform</url-pattern>
	</servlet-mapping>


	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

</web-app>
